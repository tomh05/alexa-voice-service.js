{
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "amd": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ],
        "no-trailing-spaces": 1,
        "no-whitespace-before-property": 1,
        "arrow-spacing": 1,
        "prefer-arrow-callback": 1
    }
}
